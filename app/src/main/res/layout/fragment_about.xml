            android:layout_height="wrap_content"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/itemTextSize"
            android:text="@string/okhttp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_vertical_margin"
            android:textColor="@color/gray"
            android:text="@string/common_license"
            android:textSize="@dimen/describeTextSize" />

        <TextView
            android:layout_marginTop="@dimen/common_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/itemTextSize"
            android:text="@string/flowlayout"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_vertical_margin"
            android:textColor="@color/gray"
            android:text="@string/common_license"
            android:textSize="@dimen/describeTextSize" />

        <TextView
            android:layout_marginTop="@dimen/common_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/itemTextSize"
            android:text="@string/gson"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_vertical_margin"
            android:textColor="@color/gray"
            android:text="@string/gson_license"
            android:textSize="@dimen/describeTextSize" />

    </LinearLayout>

</ScrollView>
